{
    "name": "bedrockphp/framework",
    "description": "Bedrock mini framework.",
    "keywords": ["framework", "bedrock"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "monolog/monolog": "^1.22",
        "league/container": "^2.4",
        "jenssegers/blade": "^1.1"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "psr-4": {
            "Bedrock\\": "src"
        }
    },
    "autoload-dev": {
        "files": [
            "./load.php"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
